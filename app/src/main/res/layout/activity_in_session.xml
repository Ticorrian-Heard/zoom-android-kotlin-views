<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activities.InSession">

    <FrameLayout
        android:id="@+id/bigselfview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToOutline="true">
        <us.zoom.sdk.ZoomVideoSDKVideoView
            android:id="@+id/bigselfview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/bigselfview_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/avatar_placeholder"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <FrameLayout
                android:id="@+id/participant1_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:background="@drawable/video_view_border"
                android:clipToOutline="true">
                <us.zoom.sdk.ZoomVideoSDKVideoView
                    android:id="@+id/participant1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/participant_avatar1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/avatar_placeholder"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:id="@+id/participant_nametag1"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:maxLength="20"
                    android:background="@color/light_grey"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    />

            </FrameLayout>
            <FrameLayout
                android:id="@+id/participant2_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:background="@drawable/video_view_border"
                android:clipToOutline="true">
                <us.zoom.sdk.ZoomVideoSDKVideoView
                    android:id="@+id/participant2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/participant_avatar2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avatar_placeholder"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:id="@+id/participant_nametag2"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:maxLength="20"
                    android:background="@color/light_grey"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <FrameLayout
                android:id="@+id/participant3_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:background="@drawable/video_view_border"
                android:clipToOutline="true">
                <us.zoom.sdk.ZoomVideoSDKVideoView
                    android:id="@+id/participant3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/participant_avatar3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/avatar_placeholder"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:id="@+id/participant_nametag3"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:maxLength="20"
                    android:background="@color/light_grey"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/participant4_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:background="@drawable/video_view_border"
                android:clipToOutline="true">
                <us.zoom.sdk.ZoomVideoSDKVideoView
                    android:id="@+id/participant4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/participant_avatar4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avatar_placeholder"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:id="@+id/participant_nametag4"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:maxLength="20"
                    android:background="@color/light_grey"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        app:justifyContent="space_evenly"
        app:alignItems="center"
        android:layout_gravity="top|center">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="fill_parent"
        android:layout_height="135dp"
        android:layout_marginBottom="5dp"
        app:justifyContent="space_evenly"
        app:alignItems="center"
        android:layout_gravity="bottom|center_horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/backbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:backgroundTint="@color/dark_grey"
            app:icon="@drawable/chevron_backward_24px"
            android:visibility="gone"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/audiobtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:backgroundTint="@color/blue"
            app:icon="@drawable/mic_24px"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/videobtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:backgroundTint="@color/blue"
            app:icon="@drawable/videocam_24px"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/closebtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:backgroundTint="@color/red"
            app:icon="@drawable/close_24px"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/forwardbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:backgroundTint="@color/dark_grey"
            app:icon="@drawable/chevron_forward_24px"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:visibility="gone"/>
    </com.google.android.flexbox.FlexboxLayout>

    <FrameLayout
        android:id="@+id/draggableselfview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToOutline="true">
        <us.zoom.sdk.ZoomVideoSDKVideoView
            android:id="@+id/draggableselfview"
            android:layout_width="120dp"
            android:layout_height="236dp"
            android:layout_gravity="top|end"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/draggableselfview_avatar"
            android:layout_width="120dp"
            android:layout_height="236dp"
            android:layout_gravity="top|end"
            android:src="@drawable/avatar_placeholder"
            android:visibility="gone"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/closeSession"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/leavebtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:backgroundTint="@color/blue"
            android:text="Leave Session"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/endbtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:backgroundTint="@color/red"
            android:text="End Session"/>
    </LinearLayout>

</FrameLayout>
